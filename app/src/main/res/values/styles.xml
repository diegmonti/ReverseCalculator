<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_accent</item>
    </style>

    <style name="CalcButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/calc_button_text</item>
        <item name="android:textColor">@color/calc_button_text</item>
    </style>

    <style name="DigitButton" parent="CalcButton">
        <item name="backgroundTint">@color/digit_button</item>
    </style>

    <style name="OperatorButton" parent="CalcButton">
        <item name="backgroundTint">@color/operator_button</item>
    </style>

    <style name="EnterButton" parent="CalcButton">
        <item name="backgroundTint">@color/enter_button</item>
    </style>

    <style name="FunctionButton" parent="CalcButton">
        <item name="backgroundTint">@color/function_button</item>
    </style>

</resources>
