<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="CalcButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/calc_button_text_size</item>
        <item name="android:textColor">@color/calcButtonText</item>
    </style>

    <style name="DigitButton" parent="CalcButton">
        <item name="backgroundTint">@color/digitButton</item>
    </style>

    <style name="OperatorButton" parent="CalcButton">
        <item name="backgroundTint">@color/operatorButton</item>
    </style>

    <style name="EnterButton" parent="CalcButton">
        <item name="backgroundTint">@color/enterButton</item>
    </style>

    <style name="FunctionButton" parent="CalcButton">
        <item name="backgroundTint">@color/functionButton</item>
    </style>

</resources>
